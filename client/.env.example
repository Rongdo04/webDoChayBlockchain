# Environment Configuration Example
# Copy this file to .env and fill in your values

# Application Settings
VITE_APP_NAME="RecipeHub"
VITE_APP_VERSION="1.0.0"
VITE_APP_DESCRIPTION="Recipe Management System"
VITE_APP_URL="http://localhost:5173"

# Upload Configuration
VITE_UPLOAD_MODE=local
# VITE_UPLOAD_MODE=s3

# API Configuration
VITE_API_URL="http://localhost:8000/api"
VITE_API_TIMEOUT=10000
VITE_API_VERSION="v1"

# Authentication
VITE_TOKEN_KEY="token"
VITE_USER_KEY="user"
VITE_REMEMBER_KEY="remember_me"
VITE_SESSION_TIMEOUT=86400000

# Storage
VITE_STORAGE_PREFIX="Web_Do_Chay_"
VITE_ENCRYPTION_KEY="your_encryption_key_here"

# Features
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_PWA=false
VITE_ENABLE_SERVICE_WORKER=false

# Debug and Logging
VITE_ENABLE_LOGGING=true
VITE_LOG_LEVEL="info"
VITE_ENABLE_REDUX_DEVTOOLS=true

# External Services
VITE_GOOGLE_ANALYTICS_ID=""
VITE_SENTRY_DSN=""

# Firebase Configuration (Optional)
VITE_FIREBASE_API_KEY=""
VITE_FIREBASE_AUTH_DOMAIN=""
VITE_FIREBASE_PROJECT_ID=""
VITE_FIREBASE_STORAGE_BUCKET=""
VITE_FIREBASE_MESSAGING_SENDER_ID=""
VITE_FIREBASE_APP_ID=""

# UI Configuration
VITE_DEFAULT_THEME="light"
VITE_DEFAULT_LANGUAGE="vi"
VITE_DEFAULT_TIMEZONE="Asia/Ho_Chi_Minh"

# File Upload
VITE_MAX_FILE_SIZE=5242880
VITE_ALLOWED_FILE_TYPES="jpg,jpeg,png,gif,pdf"
VITE_UPLOAD_ENDPOINT="/upload"

# Pagination
VITE_DEFAULT_PAGE_SIZE=10
VITE_MAX_PAGE_SIZE=100
