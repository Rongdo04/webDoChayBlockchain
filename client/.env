# Client Environment Variables

# Application Settings
VITE_APP_NAME="RecipeHub"
VITE_APP_VERSION="1.0.0"

# Upload Configuration
VITE_UPLOAD_MODE=local
VITE_APP_DESCRIPTION="MERN Stack Authentication System"
VITE_APP_URL="http://localhost:5173"

# API Configuration
VITE_API_BASE_URL=http://localhost:8000
VITE_USE_MOCK=false
VITE_API_TIMEOUT=10000
VITE_API_VERSION="v1"

# Authentication
VITE_TOKEN_KEY="token"
VITE_USER_KEY="user"
VITE_REMEMBER_KEY="remember_me"
VITE_SESSION_TIMEOUT=86400000

# Storage
VITE_STORAGE_PREFIX="Web_Do_Chay_"
VITE_ENCRYPTION_KEY="client_encryption_key_123"

# Features
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_PWA=false
VITE_ENABLE_SERVICE_WORKER=false

# Debug and Logging
VITE_ENABLE_LOGGING=true
VITE_LOG_LEVEL="info"
VITE_ENABLE_REDUX_DEVTOOLS=true

# UI Configuration
VITE_DEFAULT_THEME="light"
VITE_DEFAULT_LANGUAGE="vi"
VITE_DEFAULT_TIMEZONE="Asia/Ho_Chi_Minh"

# File Upload
VITE_MAX_FILE_SIZE=5242880
VITE_ALLOWED_FILE_TYPES="jpg,jpeg,png,gif,pdf"
VITE_UPLOAD_ENDPOINT="/upload"

# Pagination
VITE_DEFAULT_PAGE_SIZE=10
VITE_MAX_PAGE_SIZE=100
